key M {
    label:                              'M'
    base:                               'm'
    shift, capslock:                    'M'
    shift+capslock:                     'm'
}

key COMMA {
    label:                              ','
    base:                               ','
    shift:                              '<'
}

key PERIOD {
    label:                              '.'
    base:                               '.'
    shift:                              '>'
}

key SLASH {
    label:                              ';'
    base:                               ';'
    shift:                              ':'
}

key RO {
    label:                              '/'
    base:                               '/'
    shift:                              '?'
    ralt:                               '\u00b0'
}
