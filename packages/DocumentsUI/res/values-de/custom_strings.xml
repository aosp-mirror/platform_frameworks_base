<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Action bar title when the app is in standalone (file manager) mode [CHAR LIMIT=32] -->
    <string name="title_standalone">Dateien</string>

    <!-- Toast shown after successfully deleting files -->
    <string name="toast_success_delete">Dateien gelöscht</string>

    <!-- Title of the Delete confirmation dialog -->
    <string name="dialog_delete_confirm_title">Dateien löschen?</string>

    <!-- Text shown in a toast when the user copies files -->
    <plurals name="files_copied">
        <item quantity="one">Die Datei wurde in die Zwischenablage gelegt</item>
        <item quantity="other">%d Dateien in die Zwischenablage gelegt</item>
    </plurals>

    <!-- Text shown in a toast when the user pastes files -->
    <plurals name="files_pasted">
        <item quantity="one">Die Datei wurde eingefügt. Hochladen könnte im Hintergrund abgeschlossen werden.</item>
        <item quantity="other">%d Dateien wurden eingefügt. Hochladen könnte im Hintergrund abgeschlossen werden.</item>
    </plurals>

    <!-- Text show in the progress dialog while files are being copied -->
    <string name="copy_in_progress">Kopieren...</string>

    <!-- Text show in the progress dialog while files are being deleted -->
    <string name="delete_in_progress">Löschen...</string>

    <plurals name="dialog_delete_confirm_message">
        <item quantity="one">Diese Datei wird dauerhaft gelöscht!</item>
        <item quantity="other">Dies wird dauerhaft die %d ausgewählten Dateien löschen!</item>
    </plurals>

    <string name="ok">OK</string>
    <string name="cancel">Abbrechen</string>
</resources>
