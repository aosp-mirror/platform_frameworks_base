<!-- hour_header must be sorted based on hour
entry can only be only one of hour or day/month type
day_header entries have a higher priority then hour entries -->

<daylight_headers>

    <!-- Time of the day headers -->
    <hour_header hour="6" image="notifhead_sunrise" />
    <hour_header hour="9" image="notifhead_morning" />
    <hour_header hour="11" image="notifhead_noon" />
    <hour_header hour="13" image="notifhead_afternoon" />
    <hour_header hour="19" image="notifhead_sunset" />
    <hour_header hour="21" image="notifhead_night" />

    <!-- Special day headers -->
    <day_header day="25" month="12" image="notifhead_christmas" />
    <day_header day="31" month="12" image="notifhead_newyearseve" />

</daylight_headers>
