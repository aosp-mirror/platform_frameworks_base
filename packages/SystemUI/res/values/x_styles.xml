<resources>

    <!-- Pure Tuner Theme-->
    <style name="ExTunerSettings" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="preferenceTheme">@style/TunerPreferenceTheme</item>
    </style>

    <!-- reTicker -->
    <style name="TextAppearance.Notifications.reTicker" parent="@*android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>
    
    <!-- OmniJaws weather -->
    <style name="TextAppearance.StatusBar.Expanded.Weather">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Weather.Detailed">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

</resources>
