<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:priv-android="http://schemas.android.com/apk/prv/res/android"
    android:autoMirrored="true">
    <item android:height="20dp">
        <selector>
            <item android:state_enabled="false">
                <shape android:tint="?android:attr/colorAccent" android:shape="rectangle">
                    <size android:height="20dp" />
                    <solid android:color="#80ffffff" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape android:tint="?android:attr/colorAccent" android:shape="rectangle">
                    <size android:height="20dp" />
                    <solid android:color="#ffffffff" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </selector>
    </item>
    <item android:gravity="end|center" android:end="4dp" android:height="12dp">
        <selector>
            <item android:state_enabled="false">
                <shape android:tint="@color/seekbar_progress_thumb" android:shape="oval">
                    <size android:width="12dp" android:height="12dp" />
                    <solid android:color="#40626161" />
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape android:tint="@color/seekbar_progress_thumb" android:shape="oval">
                    <size android:width="12dp" android:height="12dp" />
                    <solid android:color="#80626161" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
