    name: "android.os.permissions_aidl",
    unstable: true,
    local_include_dir: ".",
    srcs: [
        "android/os/IPermissionController.aidl",
    ],
    backend: {
        rust: {
            enabled: true,
            apex_available: [
                "//apex_available:platform",
                "com.android.virt", // for virtualizationservice
